        <div class="podium">
            <table id="podium">
                <tr>
                    <td>
                        <div class="text-center">2</div>
                        <div id="second">
                            <div class="text-inside">
                                <span class="player"><%=top.result[0][1].nameBot%></span>
                                <span class="points"><%=top.result[0][1].pointBot%> points</span>
                                <a class="users" href="/profile/<%=top.result[0][1].userIdBot%>"><%=top.result[0][1].loginUser%></a>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="text-center">1</div>
                        <div id="first">
                            <div class="text-inside">
                                <span class="player"><%=top.result[0][0].nameBot%></span>
                                <span class="points"><%=top.result[0][0].pointBot%> points</span>
                                <a class="users" href="/profile/<%=top.result[0][0].userIdBot%>"><%=top.result[0][0].loginUser%></a>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="text-center">3</div>
                        <div id="third">
                            <div class="text-inside">
                                <span class="player"><%=top.result[0][2].nameBot%></span>
                                <span class="points"><%=top.result[0][2].pointBot%> points</span>
                                <a class="users" href="/profile/<%=top.result[0][2].userIdBot%>"><%=top.result[0][2].loginUser%></a>
                            </div>
                        </div>
